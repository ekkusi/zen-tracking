{
  "name": "@ekeukko/zen-tracking",
  "workspaces": [
    "modules/*"
  ],
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "cross-env": "^7.0.3",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "4.0.0",
    "husky": "^4.3.7",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "patch-package": "^6.2.2",
    "prettier": "^2.2.1",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,mdx}": [
      "eslint"
    ]
  },
  "scripts": {
    "setup": "yarn install && yarn --cwd modules/backend build && yarn patch-package",
    "build:backend": "yarn --cwd modules/backend build",
    "build:frontend": "yarn --cwd modules/frontend build",
    "build:all": "lerna run build",
    "generate:backend": "yarn --cwd modules/backend generate-types",
    "generate-prisma": "yarn --cwd modules/backend prisma-generate",
    "gen:theme-typings": "chakra-cli tokens ./modules/frontend/src/theme.ts",
    "lint": "eslint modules/backend/src --ext ts,js && eslint modules/frontend/src --ext tsx,ts,js",
    "start": "NODE_ENV=production node modules/backend/lib/app.js",
    "run:prod": "yarn --cwd modules/backend prod",
    "develop": "lerna run --parallel start",
    "stop:all": "lerna run --parallel stop",
    "patch-chakra-theme": "patch-package @chakra-ui/theme",
    "postgredump": "docker-compose exec postgres sh -c \"pg_dump --clean --no-owner --no-privileges --if-exists -U user -d zen-tracking -f /tmp/zen_tracking_mock_dump.sql\"",
    "postgredump-plain": "docker-compose exec postgres sh -c \"pg_dump --schema-only --clean --no-owner --no-privileges --if-exists -U user -d zen-tracking -f /tmp/zen_tracking_mock_dump_plain.sql\"",
    "postgreimport": "docker-compose exec postgres sh -c \"psql -U user -d zen-tracking -f /tmp/zen_tracking_mock_dump.sql\"",
    "heroku-prebuild": "export NPM_CONFIG_PRODUCTION=false",
    "heroku-postbuild": "patch-package && yarn build:all && export NPM_CONFIG_PRODUCTION=true"
  }
}
